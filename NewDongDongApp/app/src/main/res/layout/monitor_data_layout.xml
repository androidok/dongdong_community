<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_video_view_control_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_light_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@mipmap/light" />

        <TextView
            android:id="@+id/tv_video_quality_cotrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_light_control"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/fps_ph"
            android:gravity="center"
            android:text="高清"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_video_audio_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_light_control"
            android:layout_marginTop="15dp"
            android:contentDescription="@null"
            android:src="@mipmap/device_audio" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp" >

        <View
            android:id="@+id/view_baseline"
            android:layout_width="13dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/iv_download_data_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_baseline"
            android:layout_centerHorizontal="true"
            android:text="5kb/s"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_all_data_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_download_data_tip"
            android:contentDescription="@null"
            android:src="@mipmap/gprs" />

        <TextView
            android:id="@+id/iv_upload_data_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_all_data_tip"
            android:layout_centerHorizontal="true"
            android:text="5kb/s"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_screen_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_baseline"
            android:layout_marginTop="15dp"
            android:contentDescription="@null"
            android:src="@mipmap/screen_1" />
    </RelativeLayout>

</FrameLayout>