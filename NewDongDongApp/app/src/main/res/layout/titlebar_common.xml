<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bard_height"
    android:background="@color/status_color"
    android:padding="@dimen/space_10">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:drawableLeft="@drawable/back_click" />

    <TextView
        android:id="@+id/tv_title_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/space_40"
        android:clickable="true"
        android:text="@string/title_info"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:drawableRight="@drawable/add_click" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:drawableRight="@drawable/finish_click"
        android:visibility="gone" />

</RelativeLayout>