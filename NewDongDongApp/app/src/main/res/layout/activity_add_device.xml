<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.dongdong.app.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ib_lan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="@null"
                android:src="@drawable/lan_refresh"/>

            <ImageButton
                android:id="@+id/ib_rc_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="@null"
                android:src="@drawable/rc_code"/>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_list_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:divider="#eee"
            android:dividerHeight="@dimen/space_1"
            android:drawSelectorOnTop="false"
            android:footerDividersEnabled="false"/>
    </LinearLayout>

</LinearLayout>