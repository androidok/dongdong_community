<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dongdong.app.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:requiresFadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_20" >

            <LinearLayout
                android:id="@+id/ll_deviceinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_35"
                android:background="@drawable/widget_list_item_bg" >

                <RelativeLayout
                    android:id="@+id/rl_devicemessage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:paddingBottom="@dimen/space_6"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_6" >

                    <RelativeLayout
                        android:id="@+id/rl_setting_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5" >

                        <ImageView
                            android:id="@+id/iv_setting_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/space_3"
                            android:paddingTop="@dimen/space_3"
                            android:src="@mipmap/deviceinfo" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rl_setting_device"
                        android:paddingLeft="@dimen/space_12"
                        android:text="@string/deviceMessage"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_35"
                android:background="@drawable/widget_list_item_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/rl_wifisetting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:paddingBottom="@dimen/space_6"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_6" >

                    <RelativeLayout
                        android:id="@+id/rl_setting_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5" >

                        <ImageView
                            android:id="@+id/iv_setting_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/space_3"
                            android:paddingTop="@dimen/space_3"
                            android:src="@mipmap/wifisetting" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rl_setting_wifi"
                        android:paddingLeft="@dimen/space_12"
                        android:text="Wi-Fi"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginLeft="@dimen/space_20"
                    android:background="#d9d9d9" />

                <RelativeLayout
                    android:id="@+id/rl_recorddevice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:paddingBottom="@dimen/space_6"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_6" >

                    <RelativeLayout
                        android:id="@+id/rl_setting_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5" >

                        <ImageView
                            android:id="@+id/iv_setting_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/space_3"
                            android:paddingTop="@dimen/space_3"
                            android:src="@mipmap/recodesetting" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rl_setting_record"
                        android:paddingLeft="@dimen/space_12"
                        android:text="@string/recordSetting"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/space_20"
                    android:background="#d9d9d9" />

                <RelativeLayout
                    android:id="@+id/rl_restartdevice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:paddingBottom="@dimen/space_6"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_6" >

                    <RelativeLayout
                        android:id="@+id/rl_setting_restart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_6" >

                        <ImageView
                            android:id="@+id/iv_setting_restart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/space_3"
                            android:paddingTop="@dimen/space_3"
                            android:src="@mipmap/restart" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rl_setting_restart"
                        android:paddingLeft="@dimen/space_12"
                        android:text="@string/researtDivece"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>