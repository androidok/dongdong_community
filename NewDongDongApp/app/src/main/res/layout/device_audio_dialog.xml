<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dip"
    android:layout_height="50.0dip"
    android:background="#70000000"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/space_15"
        android:src="@mipmap/device_sound" />

    <LinearLayout
        android:layout_width="@dimen/space_300"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_3"
        android:paddingRight="@dimen/space_5" >

        <SeekBar
            android:id="@+id/device_audio_bar"
            android:layout_width="@dimen/space_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:centerColor="#85B0E9"
            android:endColor="#165CBC"
            android:max="69"
            android:maxHeight="@dimen/space_5"
            android:minHeight="@dimen/space_5"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:progress="0"
            android:startColor="#85B0E9"
            android:thumb="@mipmap/myseekbar" />
    </LinearLayout>

</LinearLayout>