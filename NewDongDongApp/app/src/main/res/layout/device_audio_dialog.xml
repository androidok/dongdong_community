<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:background="#70000000"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:paddingLeft="15dp"
        android:src="@mipmap/device_sound" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <SeekBar
            android:id="@+id/device_audio_bar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:centerColor="#85B0E9"
            android:endColor="#165CBC"
            android:max="69"
            android:maxHeight="5.0dip"
            android:minHeight="5.0dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:progress="0"
            android:startColor="#85B0E9"
            android:thumb="@mipmap/myseekbar" />
    </LinearLayout>

</LinearLayout>