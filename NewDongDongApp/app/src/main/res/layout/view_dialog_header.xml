<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="@dimen/space_60"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_18"
        android:paddingLeft="@dimen/global_dialog_padding"
        android:paddingRight="@dimen/global_dialog_padding"
        android:paddingTop="@dimen/global_dialog_padding" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/ll_button_well"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/dialog_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_title_divder"
        style="@style/dialog_divider"
        android:visibility="visible" />

</merge>