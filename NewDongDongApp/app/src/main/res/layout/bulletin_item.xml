<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/option_item_rp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_open_door"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@mipmap/bulletin_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_open_door"
            android:orientation="vertical"
            android:padding="@dimen/space_5">

            <TextView
                android:id="@+id/tv_title"
                style="@style/option_item_text"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingBottom="@dimen/space_10"
                android:textColor="#555"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_created"
                style="@style/option_item_text"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail"
                android:layout_width="@dimen/space_30"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@mipmap/detail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_30"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@id/detail"
                android:gravity="center"
                android:text="@string/detail"
                android:textColor="@color/status_color"
                android:textSize="@dimen/text_size_12"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>