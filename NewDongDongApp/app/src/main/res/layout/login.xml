<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/space_15" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/ellipse_shape"
        android:paddingTop="@dimen/space_3" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/space_380"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:id="@+id/tv_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="@dimen/space_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="@dimen/space_160"
                    android:layout_height="@dimen/space_44"
                    android:layout_marginLeft="@dimen/space_5"
                    android:hint="@string/pleaseInputPassword"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:singleLine="true" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_30"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/space_2"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_30"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/loginup"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>