<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefeff4"
    android:orientation="vertical">

    <com.dongdong.app.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:requiresFadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/space_20">


            <TextView
                android:id="@+id/tv_device_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/widget_list_item_bg"
                android:padding="@dimen/space_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34.0dip"
                android:background="@drawable/widget_list_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/deviceName"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18" />

                    <EditText
                        android:id="@+id/tv_device_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18" />

                    <Button
                        android:id="@+id/bt_update"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_30"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:text="@string/update" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="#d9d9d9" />

                <RelativeLayout
                    android:id="@+id/rl_authorize_ccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/deviceMan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="#d9d9d9" />

                <RelativeLayout
                    android:id="@+id/rl_default_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/def"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/defaultText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@null"
                            android:src="@mipmap/space_favor_item_arrow" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#d9d9d9" />

                <RelativeLayout
                    android:id="@+id/rl_delete_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_list_item_bg_selector"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/delete_device"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/space_favor_item_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>